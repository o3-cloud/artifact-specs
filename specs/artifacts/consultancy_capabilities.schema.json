{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ConsultancyCapabilities",
  "description": "Basic description of a consultancy's capabilities. All descriptions should be factual and avoid speculation.",
  "type": "object",
  "required": ["name", "summary", "services", "industries"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the consultancy"
    },
    "summary": {
      "type": "string",
      "description": "Short overview of the consultancy. This should be factual and avoid speculation."
    },
    "industries": {
      "type": "array",
      "description": "Industries served",
      "items": { "type": "string" }
    },
    "services": {
      "type": "array",
      "description": "Main services offered",
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": { "type": "string" },
          "description": {
            "type": "string",
            "description": "Factual description of the service."
          },
          "capabilities": {
            "type": "array",
            "description": "Specific capabilities under this service",
            "items": { "type": "string" }
          }
        }
      }
    },
    "competencies": {
      "type": "array",
      "description": "Core skills or areas of expertise",
      "items": { "type": "string" }
    },
    "tools": {
      "type": "array",
      "description": "Tools and technologies used",
      "items": { "type": "string" }
    },
    "methods": {
      "type": "array",
      "description": "Methodologies or frameworks followed",
      "items": { "type": "string" }
    },
    "caseStudies": {
      "type": "array",
      "description": "Short summaries of successful projects",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "summary": {
            "type": "string",
            "description": "Factual summary of the case study. Avoid speculation."
          },
          "outcomes": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "differentiators": {
      "type": "array",
      "description": "Unique strengths vs competitors",
      "items": { "type": "string" }
    },
    "contact": {
      "type": "object",
      "description": "Primary contact details",
      "properties": {
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "website": { "type": "string", "format": "uri" }
      }
    }
  }
}
